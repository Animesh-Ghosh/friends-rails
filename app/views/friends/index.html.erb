<p style="color: green"><%= notice %></p>

<% content_for :title, "Friends" %>


  <h1>Friends</h1>

  <table class="table" id="friends">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @friends.each do |friend| %>
        <% count += 1 %>
        <tr id="<%= dom_id friend %>">
          <th scope="row"><%= count %></th>
          <%= render friend %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= turbo_frame_tag id='new_friends' , src:new_friend_path %>
  <%#= link_to "New friend", new_friend_path %>
